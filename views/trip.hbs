<div class="big-trip-container">
    <!-- coverPictureTrip -->
    <div class="cover" style="background-image: url({{trip.pictureTrip}}) ;">
    </div>
    <!-- tripInfos -->
    <div class="trip-info">
        <div class="user-info">
            <img class="user-picture" src="{{trip.user.userpicture}}" alt="userpicture">
            <h3 class="user-name">Get inspired by {{trip.user.name}}</h3>
            <p class="user-description">" {{trip.user.description}} "</p>
            <p class="user-age">{{trip.user.age}} ans</p>
        </div>
        <div class="trip-details">
            <div class="trip-top">
                <h2 class="trip-destination">{{trip.destination}}</h2>
                <p class="description">" {{trip.description}} "</p>
                <hr class="separate">
                <p class="trip-thematics">
                    <span class="trip-thematics-labels">Trip mood: </span>
                    {{#each trip.thematics}}
                    <span> {{this}}, </span>
                    {{/each}}
                </p>
                <div class="duration-period-budget">
                    <p class="trip-duration">Duration: {{trip.duration}}</p>
                    <p class="trip-period">Period: {{trip.period}}</p>
                    <p class="trip-budget">Budget: {{trip.budget}}</p>
                </div>
                <hr class="separate">
            </div>
            <div class="like-or-not">
                <div class="i-liked">
                    <h4 class="like-title">I liked:</h4>
                    <p class="like-item">{{trip.iLiked}}</p>
                </div>
                <div class="i-didnt-like">
                    <h4 class="like-title">I didn't like:</h4>
                    <p class="like-item">{{trip.iDidntLike}}</p>
                </div>
            </div>
        </div>

