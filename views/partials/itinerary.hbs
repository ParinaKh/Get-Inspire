<div id="trip-map">
    <div id="itinerary-line">
        {{#each trip.otherStep}}
        {{#unless @last}}<div class="container">
            <i class="fas fa-map-marker-alt"></i>
            <div class="step">
                {{this}}
            </div>
        </div>
        <div class="margin-line">
            <div class="line"></div>
        </div>{{/unless}}{{#if @last}}<div class="container">
            <i class="fas fa-map-marker-alt"></i>
            <div class="step">
                {{this}}
            </div>
        </div>{{/if}}
        {{/each}}

    </div>

    <div>
        <h3 id="title">My Itinerary</h3>
        <!--The div element for the map -->
        <div id="map"></div>
    </div>
</div>